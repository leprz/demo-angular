      "@demo/contracts/contract-todo": ["contracts/contract-todo/src/index.ts"],
      "@demo/feature-common": ["features/feature-common/src/index.ts"],
      "@demo/feature-permissions": [
        "features/feature-permissions/src/index.ts"
      ],
      "@demo/feature-todo-edit": ["features/feature-todo-edit/src/index.ts"],
      "@demo/features/feature-todo-common": [
        "features/feature-todo-common/src/index.ts"
      ],
      "@demo/features/feature-todo-create": [
        "features/feature-todo-create/src/index.ts"
      ],
      "@demo/features/feature-todo-delete": [
        "features/feature-todo-delete/src/index.ts"
      ],
      "@demo/features/feature-todo-details": [
        "features/feature-todo-details/src/index.ts"
      ],
      "@demo/features/feature-todo-list": [
        "features/feature-todo-list/src/index.ts"
      ],
